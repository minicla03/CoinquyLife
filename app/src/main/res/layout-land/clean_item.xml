<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:backgroundTint="#D1B3FF"> 
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_edittext"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/GiornoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giorno Svolgimento"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#8A2BE2" />

        <TextView
            android:id="@+id/timeSlotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HH:MM - HH:MM"
            android:textSize="18sp"
            android:textColor="#5C5C5C" />
    </LinearLayout>

    <TextView
        android:id="@+id/taskDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Descrizione del task qui..."
        android:textColor="#5C5C5C"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/assignedRoommateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_chip_green"
            android:backgroundTint="#E8F5E9"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Assegnato a: "
            android:textColor="#4CAF50"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_complete_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa"
            android:textAllCaps="false"
            android:layout_marginStart="12dp"
            android:backgroundTint="#8A2BE2"
            android:textColor="@android:color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>