<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Immagine profilo -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_marginTop="16dp" />

        <!-- Nome e ruolo -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mario Rossi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coinquilino - Appartamento A"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Statistiche -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="3"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Coinquilini"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="1200"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Punti"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sezioni -->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbProfilo"
                android:text="Profilo"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbBacheca"
                android:text="Bacheca" />

            <RadioButton
                android:id="@+id/rbTurni"
                android:text="Turni" />
        </RadioGroup>

        <!-- Descrizione o Bio -->
        <TextView
            android:id="@+id/tvBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Studente fuori sede. Amante della cucina e sempre puntuale nei turni! ðŸš€"
            android:layout_marginTop="12dp"
            android:textSize="14sp"/>

        <!-- Azioni rapide -->
        <Button
            android:id="@+id/btnCalendarioTurni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Vedi calendario turni"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnClassifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ† Classifica Coinquilini"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSpese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Gestione spese condivise"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
