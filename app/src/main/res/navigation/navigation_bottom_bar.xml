<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeDashboardFragment">

    <!-- HUB: Dashboard -->
    <fragment
        android:id="@+id/homeDashboardFragment"
        android:name="dashboard.UI.HomeDashboardFragment"
        android:label="Dashboard">

        <!-- Spokes (azioni verso schermate secondarie) -->
        <action
            android:id="@+id/action_home_to_shifts"
            app:destination="@id/shiftsFragment" />
        <action
            android:id="@+id/action_home_to_expenses"
            app:destination="@id/expensesFragment" />
        <action
            android:id="@+id/action_home_to_rank"
            app:destination="@id/rankFragment" />
        <action
            android:id="@+id/action_home_to_board"
            app:destination="@id/boardFragment" />
    </fragment>

    <!-- SPOKES -->
    <fragment
        android:id="@+id/shiftsFragment"
        android:name="dashboard.UI.ShiftsFragment"
        android:label="Turni" />

    <fragment
        android:id="@+id/expensesFragment"
        android:name="dashboard.UI.ExpensesFragment"
        android:label="Spese" />

    <fragment
        android:id="@+id/rankFragment"
        android:name="dashboard.UI.RankFragment"
        android:label="Classifica" />

    <fragment
        android:id="@+id/boardFragment"
        android:name="dashboard.UI.BoardFragment"
        android:label="Bacheca" />

</navigation>
