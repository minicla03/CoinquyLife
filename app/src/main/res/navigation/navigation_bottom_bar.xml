<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <!-- HUB: Dashboard -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="tuo.package.DashboardFragment"
        android:label="Dashboard">

        <!-- Spokes: definisci le azioni verso le schermate secondarie -->
        <action
            android:id="@+id/action_to_shifts"
            app:destination="@id/shiftsFragment" />
        <action
            android:id="@+id/action_to_expenses"
            app:destination="@id/expensesFragment" />
        <action
            android:id="@+id/action_to_rank"
            app:destination="@id/rankFragment" />
        <action
            android:id="@+id/action_to_board"
            app:destination="@id/boardFragment" />
        <action
            android:id="@+id/action_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <!-- SPOKES -->
    <fragment
        android:id="@+id/shiftsFragment"
        android:name="tuo.package.ShiftsFragment"
        android:label="Turni" />

    <fragment
        android:id="@+id/expensesFragment"
        android:name="tuo.package.ExpensesFragment"
        android:label="Spese" />

    <fragment
        android:id="@+id/rankFragment"
        android:name="tuo.package.RankFragment"
        android:label="Classifica" />

    <fragment
        android:id="@+id/boardFragment"
        android:name="tuo.package.BoardFragment"
        android:label="Bacheca" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="tuo.package.SettingsFragment"
        android:label="Impostazioni" />
</navigation>
